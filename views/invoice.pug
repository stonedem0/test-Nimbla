doctype html  
html(lang='en')  
 head
   style
    include invoices.css
   title Invoice
 body
   div.create-invoice
    form(method='POST' action='/create', enctype='x-www-form-urlencoded')
      div.form-group
        p.invoice-field
         input#invoice_value.form-control(type='text', placeholder='value' name='invoice_value')
        p.invoice-field
         input#name.form-control(type='text', placeholder='name' name='customer_name')
        p.invoice-field
         input#description.form-control(type='text', placeholder='decsription' name='description' cols='100', rows='10')  
      button.custom-button(type='submit') Save